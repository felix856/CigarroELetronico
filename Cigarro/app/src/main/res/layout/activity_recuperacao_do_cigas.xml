<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdizim"
    tools:context=".RecuperacaoDoCigas">

    <TextView
        android:id="@+id/dia1"
        android:layout_width="116dp"
        android:layout_height="49dp"
        android:text="1 Dia"
        android:textAlignment="center"
        android:textColor="@color/vermeio"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       O nível de oxigênio aumenta \n e risco de ataque cardiaco diminui"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dia1"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/dia1"
        app:layout_constraintTop_toBottomOf="@+id/dia1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="2 Dias"
        android:textAlignment="center"
        android:textColor="@color/vermeio"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" caminhadas se tornam mais fáceis \n e seu funcionamento pulmonar melhora em 30%"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/semana2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/semana2"
        app:layout_constraintTop_toBottomOf="@+id/semana2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olfato e paladasr melhoram"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dia2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/dia2"
        app:layout_constraintTop_toBottomOf="@+id/dia2"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/semana2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 semanas"
        android:textColor="@color/vermeio"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dia2"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/dia2"
        app:layout_constraintTop_toBottomOf="@+id/textView21"
        app:layout_constraintVertical_bias="0.058" />

    <TextView
        android:id="@+id/anos5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="5 anos"
        android:textAlignment="center"
        android:textColor="@color/vermeio"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/semana2"
        app:layout_constraintStart_toStartOf="@+id/semana2"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="indice de mortalidade de cancer no pulmão cai 50%"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/anos5"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/anos5"
        app:layout_constraintTop_toBottomOf="@+id/anos5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/anos15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="15 Anos"
        android:textAlignment="center"
        android:textColor="@color/vermeio"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As chances de recorrencia no pulmão são iguais a uma pessoa que não fumou"
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/anos15"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/anos15"
        app:layout_constraintTop_toBottomOf="@+id/anos15" />
</androidx.constraintlayout.widget.ConstraintLayout>